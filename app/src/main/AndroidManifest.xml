<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.letosfer.medulla" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.letosfer.medulla.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.letosfer.medulla.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.letosfer.medulla.SecureDataActivity"
            android:label="@string/title_activity_secure_data" >
        </activity>
        <activity
            android:name="com.letosfer.medulla.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.letosfer.medulla.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="com.letosfer.medulla.PlayActivity"
            android:label="@string/title_activity_play" >
        </activity>
    </application>

</manifest>
